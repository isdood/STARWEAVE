<!DOCTYPE html>
<html lang="en" class="h-full bg-background text-on-background" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="csrf-token" content={get_csrf_token()} />
    
    <!-- Primary Meta Tags -->
    <title><%= if assigns[:page_title], do: "#{@page_title} Â· ", else: "" %>Starweave</title>
    <meta name="title" content="Starweave - AI-Powered Conversations" />
    <meta name="description" content="Experience the future of AI conversations with Starweave. Fast, secure, and private AI chat platform." />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://starweave.app/" />
    <meta property="og:title" content="Starweave - AI-Powered Conversations" />
    <meta property="og:description" content="Experience the future of AI conversations with Starweave. Fast, secure, and private AI chat platform." />
    <meta property="og:image" content={~p"/images/og-image.jpg"} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://starweave.app/" />
    <meta property="twitter:title" content="Starweave - AI-Powered Conversations" />
    <meta property="twitter:description" content="Experience the future of AI conversations with Starweave. Fast, secure, and private AI chat platform." />
    <meta property="twitter:image" content={~p"/images/og-image.jpg"} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href={~p"/favicon-32x32.png"} />
    <link rel="icon" type="image/png" sizes="16x16" href={~p"/favicon-16x16.png"} />
    <link rel="apple-touch-icon" sizes="180x180" href={~p"/apple-touch-icon.png"} />
    <link rel="manifest" href={~p"/site.webmanifest"} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet" />
    
    <!-- Styles and Scripts -->
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}></script>
    
    <!-- Theme Script -->
    <script>
      // Check for saved theme preference or use system preference
      const theme = localStorage.getItem('theme') || 
                   (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      
      // Apply theme class to HTML element
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.classList.remove('dark');
        document.documentElement.setAttribute('data-theme', 'light');
      }
      
      // Function to toggle theme
      window.toggleTheme = function() {
        const html = document.documentElement;
        const isDark = html.classList.toggle('dark');
        const theme = isDark ? 'dark' : 'light';
        html.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
      };
      
      // Toggle mobile menu
      window.toggleMobileMenu = function() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      };
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-background text-text-primary font-sans antialiased">
    <!-- Header with gradient background -->
    <header class="bg-gradient-to-r from-surface-900 to-surface-800 border-b border-surface-700 shadow-sm">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-highlight to-pastel-purple flex items-center justify-center shadow-md">
                <span class="text-white font-bold text-sm">SW</span>
              </div>
              <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-indigo-500">
                Starweave
              </span>
            </a>
          </div>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex items-center space-x-1">
            <.link
              navigate={~p"/"}
              class={[
                "px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200",
                (@current_uri && @current_uri.path == "/") && "bg-surface-700 text-primary",
                (!@current_uri || @current_uri.path != "/") && "text-on-surface/90 hover:bg-surface-700/50 hover:text-on-surface"
              ]}
            >
              Home
            </.link>
            <.link
              navigate={~p"/chat"}
              class={[
                "px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200",
                (@current_uri && String.starts_with?(@current_uri.path, "/chat")) && "bg-surface-700 text-primary",
                (!@current_uri || !String.starts_with?(@current_uri.path, "/chat")) && "text-on-surface/90 hover:bg-surface-700/50 hover:text-on-surface"
              ]}
            >
              Chat
            </.link>
            <.link
              navigate={~p"/pricing"}
              class={[
                "px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200",
                (@current_uri && @current_uri.path == "/pricing") && "bg-surface-700 text-primary",
                (!@current_uri || @current_uri.path != "/pricing") && "text-on-surface/90 hover:bg-surface-700/50 hover:text-on-surface"
              ]}
            >
              Pricing
            </.link>
            <.link
              navigate={~p"/docs"}
              class={[
                "px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200",
                String.starts_with?(@current_uri.path, "/docs") && "bg-surface-700 text-primary",
                !String.starts_with?(@current_uri.path, "/docs") && "text-on-surface/90 hover:bg-surface-700/50 hover:text-on-surface"
              ]}
            >
              Docs
            </.link>
          </nav>
          
          <!-- Right side controls -->
          <div class="flex items-center space-x-3">
            <!-- Theme Toggle -->
            <button
              type="button"
              onclick="toggleTheme()"
              class="p-2 rounded-full hover:bg-surface-700/50 transition-colors duration-200 text-on-surface/80 hover:text-on-surface"
              aria-label="Toggle theme"
            >
              <!-- Sun Icon (Light Mode) -->
              <svg class="w-5 h-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <!-- Moon Icon (Dark Mode) -->
              <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>
            
            <!-- Auth Buttons -->
            <div class="hidden md:flex items-center space-x-2">
              <.link
                navigate={~p"/auth/sign-in"}
                class="btn btn-ghost text-sm"
              >
                Sign in
              </.link>
              <.link
                navigate={~p"/auth/register"}
                class="btn btn-primary text-sm"
              >
                Get Started
              </.link>
            </div>
            
            <!-- Mobile menu button -->
            <button
              type="button"
              onclick="toggleMobileMenu()"
              class="md:hidden p-2 rounded-full hover:bg-surface-700/50 transition-colors duration-200 text-on-surface/80 hover:text-on-surface"
              aria-label="Toggle menu"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu, show/hide based on menu state -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <.link
            navigate={~p"/"}
            class={["block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
                   (@current_uri && @current_uri.path == "/") && "bg-surface-700 text-primary",
                   (!@current_uri || @current_uri.path != "/") && "text-on-surface/90 hover:bg-surface-700 hover:text-on-surface"]}
          >
            Home
          </.link>
          <.link
            navigate={~p"/chat"}
            class={["block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
                   (@current_uri && String.starts_with?(@current_uri.path, "/chat")) && "bg-surface-700 text-primary",
                   (!@current_uri || !String.starts_with?(@current_uri.path, "/chat")) && "text-on-surface/90 hover:bg-surface-700 hover:text-on-surface"]}
          >
            Chat
          </.link>
          <.link
            navigate={~p"/pricing"}
            class={["block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
                   (@current_uri && @current_uri.path == "/pricing") && "bg-surface-700 text-primary",
                   (!@current_uri || @current_uri.path != "/pricing") && "text-on-surface/90 hover:bg-surface-700 hover:text-on-surface"]}
          >
            Pricing
          </.link>
          <.link
            navigate={~p"/docs"}
            class={["block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
                   (@current_uri && String.starts_with?(@current_uri.path, "/docs")) && "bg-surface-700 text-primary",
                   (!@current_uri || !String.starts_with?(@current_uri.path, "/docs")) && "text-on-surface/90 hover:bg-surface-700 hover:text-on-surface"]}
          >
            Docs
          </.link>
          
          <div class="pt-4 border-t border-surface-700 mt-2">
            <.link
              navigate={~p"/auth/sign-in"}
              class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-on-surface/90 hover:bg-surface-700 hover:text-on-surface transition-colors duration-200 mb-2"
            >
              Sign in
            </.link>
            <.link
              navigate={~p"/auth/register"}
              class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-center bg-gradient-to-r from-purple-500 to-indigo-600 text-white hover:opacity-90 transition-opacity duration-200"
            >
              Get Started
            </.link>
          </div>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 bg-background transition-colors duration-200">
      <%= @inner_content %>
    </main>

    <footer class="bg-surface/50 border-t border-surface-700/20 backdrop-blur-md">
      <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
